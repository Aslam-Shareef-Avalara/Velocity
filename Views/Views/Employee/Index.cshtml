@using X.Scaffolding.Core
@using PagedList.Mvc;
@model PagedList.IPagedList<DataService.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_2Col_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success create" })
</p>
<table class="table table-hover">
    <tr>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Department</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Active</th>
        <th>Employee1.FirstName</th>
        <th>Organization.Name</th>
        <th>Role1.Role1</th>
        <th class="controls-head"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee1.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Organization.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role1.Role1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.gid }, new { @class = "btn btn-xs btn-info edit" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.gid }, new { @class = "btn btn-xs btn-danger delete" })
        </td>
    </tr>
}

</table>


Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))