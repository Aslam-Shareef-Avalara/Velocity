@using X.Scaffolding.Core
@model MvcApplication2.ViewModel.EmployeeViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_2Col_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class="form-horizontal" })) 
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">
            <h3><span class="fa fa-pencil"></span> Profile</h3>
            <p>This information lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer faucibus, est quis molestie tincidunt, elit arcu faucibus erat.</p>
        </div>
        <div class="panel-body form-group-separated">
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Employee Id/Code</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.OrgEmpId" name="OrgEmpId">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Active</label>
                <div class="col-md-9 col-xs-7">
                    <input type="checkbox" class="form-control" value="@Model.Active" @(Model.Active ? "checked" : "") name="Active" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">First Name</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.FirstName" name="FirstName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Last Name</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.LastName" name="LastName">
                </div>
            </div>
             <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Gender</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.Gender" name="Gender">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Date Of Birth</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.DoB" name="DoB">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Email</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.Email" name="Email">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Desk / Landline</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.Phone" name="Phone">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Mobile</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.Mobile" name="Mobile">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Department</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.Department" name="Department">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Designation</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.Designation" name="Designation">
                </div>
            </div>
           
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Date Of Joining</label>
                <div class="col-md-9 col-xs-7">
                    <input type="text" class="form-control" value="@Model.DoJ" name="DoJ">
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-md-3 col-xs-5 control-label">Manager</label>
                <div class="col-md-9 col-xs-7">
                    <select class="form-control" name="Manager">
                        @foreach (DataService.Employee emp in Model.GetAllEmployees())
                        { 
                            <option value="@emp.gid" @(Model.Manager==emp.gid?"selected":"")>@emp.FirstName @emp.LastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-xs-5">
                    <button class="btn btn-primary btn-rounded pull-right">Save</button>
                </div>
            </div>
        </div>
    </div>
}


