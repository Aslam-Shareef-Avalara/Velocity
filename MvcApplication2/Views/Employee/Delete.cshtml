}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>FirstName</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>LastName</dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>Department</dt>
        <dd>
            @Html.DisplayFor(model => model.Department)
        </dd>

        <dt>Email</dt>
